<div class="well">
  <div>
    <p><strong> <h2 class="text-center">Lista de documentos</h2> </strong></p>
  </div>
  <br>

  <div class="container">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nombre:</th>
            <th>CÃ³digo:</th>
            <th>Archivo adjunto:</th>         
          </tr>
        </thead>
        <tbody>
        <% @procedure.documents.order(:name).each do |document|%>
          <tr>
            <td>
              <%= link_to document.name, edit_document_path(document)%>
            </td>
            <td>
              <%= document.code %>
            </td>
            <td> 
              <%= link_to document.attachment_url , class: 'btn btn-info btn-xs list' do %>
                <%= document.name %> 
                <i class="glyphicon glyphicon-save-file"></i> 
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

     <div class="text-center">
      <%= link_to '#', class: 'btn btn-success btn-lg list' do %> 
        Aprobar documentos <i class="glyphicon glyphicon-ok"></i> 
      <% end %>
     </div>

  </div>
</div>