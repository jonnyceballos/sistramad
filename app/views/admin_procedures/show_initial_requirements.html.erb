<div class="well">
  <div>
    <p><strong> <h2 class="text-center">Lista de recaudos iniciales:</h2> </strong></p>
  </div>
  <br>

  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Nombre:</th>
              <th>CÃ³digo:</th>
              <th>Archivo adjunto:</th>         
            </tr>
          </thead>
          <tbody>
            <% @procedure.documents.order(:name).each do |document|%>
              <tr>
                <td>
                  <%= document.name%>
                </td>
                <td>
                  <%= document.code %>
                </td>
                <td> 
                  <%= link_to document.attachment_url , class: 'btn btn-info btn-xs list' do %>
                    <%= document.name %> 
                    <i class="glyphicon glyphicon-save-file"></i> 
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
      <br>
        <div class="panel panel-primary">
          <div 
            class="panel-heading">Acciones disponibles:
          </div>
          <div class="panel-body">
            <p>
              <div>
                <%= link_to '#', class: 'btn btn-info btn-md list' do %> 
                  Descargar todos los documentos <i class="glyphicon glyphicon-download-alt"></i> 
                <% end %>
              </div>
            </p>
            <p>
              <div>
                <%= link_to approve_initial_requirements_admin_procedure_path(@procedure, step: '#1'), class: 'btn btn-success btn-md list' do %> 
                  Aprobar documentos <i class="glyphicon glyphicon-ok"></i> 
                <% end %>
              </div>
            </p>
          </div>
        </div>
      </div>
    </div>
</div>