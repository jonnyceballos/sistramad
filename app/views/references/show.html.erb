<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading center">Reference</div>
      <div class="panel-body">
        <label for="name" class="control-label">name</label>
        <input type="text" class="form-control" value="<%= @reference.name %>" disabled= true>

        <label for="description" class="control-label">description</label>
        <input type="text" class="form-control" value="<%= @reference.description %>" disabled= true>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_reference_path(@reference), class: 'btn btn-default' %> |
<%= link_to 'Back', references_path, class: 'btn btn-default' %>
