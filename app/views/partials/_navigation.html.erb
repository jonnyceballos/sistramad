<header>
  <% if current_user %>
      <nav class="navbar navbar-inicio navbar-inverse navbar-static-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to t(:home), :authenticated_root, class: 'navbar-brand' %>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              <% if current_user.has_role? :admin %>
                  <li class="active"><%= link_to t(:reference), references_path %></li>
                  <li><%= link_to t(:reference_lists), reference_lists_path %></li>
                  <li><%= link_to t(:users), users_path %></li>
                  <li><%= link_to t(:roles), roles_path %></li>
                  <li><%= link_to t(:employees), employees_path %></li>
                  <li><%= link_to t(:faculties), faculties_path %></li>
              <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Options
                  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                        <i class="glyphicon glyphicon-log-out"></i> Cerrar sesi√≥n
                    <% end %>
                  </li>
                  <% if current_user.has_role? :admin %>
                      <li class="divider"></li>
                      <li>
                        <%= link_to new_user_invitation_path do %>
                            <i class="glyphicon glyphicon-envelope"></i> Invitar
                        <% end %>
                      </li>
                  <% end %>
                </ul>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Idiomas
                  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <% I18n.available_locales.each do |locale| %>
                      <% if I18n.locale == locale %>
                          <li><%= link_to locale, url_for(locale: locale.to_s, only_path: true), class: "bg-info" %></li>
                      <% else %>
                          <li><%= link_to locale, url_for(locale: locale.to_s, only_path: true), html_options = {disabled: true} %></li>
                      <% end %>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>

  <% end %>
</header>