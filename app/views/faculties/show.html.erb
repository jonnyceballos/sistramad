<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading center"><%= t("faculty") %></div>
      <div class="panel-body">
        <div class="form-horizontal">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-9">
              <div class="form-group">

                <label for="name" class="control-label col-sm-5 col-md-4"><%= t("name") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @faculty.name %></p>
                </div>

                <label for="acronym" class="control-label col-sm-5 col-md-4"><%= t("acronym") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @faculty.acronym %></p>
                </div>

                <label for="active" class="control-label col-sm-5 col-md-4"><%= t("active") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @faculty.active %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="btn-toolbar">
      <div class="btn-group btn-group-justified">
        <%= link_to t('edit'), edit_faculty_path(@faculty), class: 'btn btn-info' %>
        <%= link_to t('back'), faculties_path, class: 'btn btn-info' %>
      </div>
    </div>
  </div>
</div>