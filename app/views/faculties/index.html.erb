<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to t('index.listing_faculties'), faculties_path %></li>
  <li><%= link_to t('index.new_faculty'), new_faculty_path %></li>
</ul>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%=	t('name') %></th>
      <th><%=	t('active') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @faculties.each do |faculty| %>
        <tr>
          <td><%= faculty.name %></td>
          <td><%= faculty.active %></td>
          <td>
            <div class="btn-toolbar">
              <div class="btn-group btn-group-xs">
                <%= link_to t('index.show'), faculty, class: 'btn btn-info list' %>
                <%= link_to t('index.edit'), edit_faculty_path(faculty), class: 'btn btn-primary list' %>
                <%= link_to t('index.destroy'), faculty, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger list' %>
              </div>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @faculties %></br>
<%= page_entries_info @faculties %>

<br><br>

<%= link_to new_faculty_path, class: 'btn btn-info btn-sm list' do %>
    <i class="glyphicon glyphicon-plus"></i> <%= t('index.new_faculty') %>
<% end %>

