<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading center">Faculty</div>
      <div class="panel-body">
        <%= simple_form_for(@faculty) do |f| %>
            <%= f.error_notification %>

            <% if @faculty.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@faculty.errors.count, "error") %> prohibited this user from being saved:</h2>

                  <ul>
                    <% @faculty.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <div class="form-inputs">
              <%= f.input :name %>
              <%= f.input :acronym %>
              <%= f.input :active %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, value: 'Send', class: 'form-control' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>