<p id="notice"><%= notice %></p>

<h1>Listing Countries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capital</th>
      <th>Region</th>
      <th>Sub region</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Nativename</th>
      <th>Alpha2code</th>
      <th>Alpha3code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.capital %></td>
        <td><%= country.region_id %></td>
        <td><%= country.sub_region_id %></td>
        <td><%= country.latitude %></td>
        <td><%= country.longitude %></td>
        <td><%= country.nativeName %></td>
        <td><%= country.alpha2Code %></td>
        <td><%= country.alpha3Code %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

