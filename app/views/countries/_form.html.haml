= form_for(@country) do |f|
  - if @country.errors.any?
    #error_explanation
      %h2
        = pluralize(@country.errors.count, "error")
        prohibited this country from being saved:
      %ul
        - @country.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :capital
    %br/
    = f.text_field :capital
  .field
    = f.label :region_id
    %br/
    = f.number_field :region_id
  .field
    = f.label :sub_region_id
    %br/
    = f.number_field :sub_region_id
  .field
    = f.label :latitude
    %br/
    = f.text_field :latitude
  .field
    = f.label :longitude
    %br/
    = f.text_field :longitude
  .field
    = f.label :nativeName
    %br/
    = f.text_field :nativeName
  .field
    = f.label :alpha2Code
    %br/
    = f.text_field :alpha2Code
  .field
    = f.label :alpha3Code
    %br/
    = f.text_field :alpha3Code
  .actions
    = f.submit
