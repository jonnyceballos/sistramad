.row
  .col-md-10.col-md-offset-1
    .panel.panel-info
      .panel-heading.center= t('role')
      .panel-body
        .form-horizontal
          .row
            .col-xs-12.col-sm-12.col-md-9
              .form-group
                %label.control-label.col-sm-5.col-md-4{:for => "name"}
                  = t("name")
                  \:
                .col-sm-7.col-md-8
                  %p.form-control-static= @role.name
                %label.control-label.col-sm-5.col-md-4{:for => "resource_id"} resource_id:
                .col-sm-7.col-md-8
                  %p.form-control-static= @role.resource_id
                %label.control-label.col-sm-5.col-md-4{:for => "resource_type"} resource_type:
                .col-sm-7.col-md-8
                  %p.form-control-static= @role.resource_type
.btn-toolbar
  .btn-group.btn-group-justified
    = link_to t('edit'), edit_role_path(@role), class: 'btn btn-info'
    = link_to t('back'), roles_path, class: 'btn btn-info'
