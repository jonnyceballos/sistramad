<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Listing Users', users_path %></li>
  <li><%= link_to 'New user', new_user_path %></li>
</ul>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= t('first_name') %></th>
      <th><%= t('last_name') %></th>
      <th><%= t('genre') %></th>
      <th><%= t('identification_document') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.genre %></td>
          <td><%= user.identification_document %></td>
          <td>
            <div class="btn-toolbar">
              <div class="btn-group btn-group-xs">
                <%= link_to 'Show', user, class: 'btn btn-info list' %>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary list' %>
                <%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger list' %>
              </div>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @users %></br>
<%= page_entries_info @users %>

<br>

<%= link_to new_user_path, class: 'btn btn-info btn-sm list' do %>
    <i class="glyphicon glyphicon-plus"></i> New User
<% end %>
