<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Listing Users', users_path %></li>
  <li><%= link_to 'New user', new_user_path %></li>
</ul>

<table>
  <thead>
    <tr>
      <th>username</th>
      <th>first_name</th>
      <th>middle_name</th>
      <th>last_name</th>
      <th>genre</th>
      <th>identification_document</th>
      <th>birthday</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.middle_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.genre %></td>
        <td><%= user.identification_document %></td>
        <td><%= user.birthday %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-success btn-xs' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!--<%= link_to 'New User', new_user_path %>-->

<%= link_to new_user_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New User
<% end %>
