<div id="user-lookup">
  <%= form_tag search_users_rotation_plan_path, remote: true, method: :get, id: 'user-lookup-form' do %>
    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-10">
        <%= text_field_tag :search_param, params[:search_param],
                            placeholder: 'Nombre, Apellido o Correo',
                            autofocus: true,
                            class: 'form-control search-box input-lg' %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class: 'btn btn-lg btn-success') do %>
          <i class='fa fa-search'></i> Buscar usuario
        <% end %>
      </div>
    </div>
  <% end %>
  <%= render 'common/spinner' %>
  <h1> TENGO 0!!!</h1>
  <% if @users %>
    <h1> TENGO USUARIOS!!!</h1>
    <% if @users.size > 0 %>
      <div id="user-lookup-results" class="well results-block col-md-10">
        <table class="search-results-table col-md-12">
          <tbody>
            <% @users.each do |user| %>
              <% p user.identification_document%>
              <tr>
                <td><strong>Nombre:</strong> <%= user.first_name %></td>
                <td><strong>Apellido:</strong> <%= user.last_name %></td>
                <td><strong>CÃ©dula:</strong> <%= user.identification_document %></td>
                <td><strong>Correo:</strong> <%= user.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <%else%>
      <p class="lead col-md-12">
        No se encontraron usuarios
      </p>
    <%end%>
  <%end%>
  <div 
    id="user-lookup-errors"> 
  </div>
</div>