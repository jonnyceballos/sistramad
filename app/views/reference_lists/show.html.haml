.row
  .col-md-10.col-md-offset-1
    .panel.panel-info
      .panel-heading.center= t('reference_list')
      .panel-body
        .form-horizontal
          .row
            .col-xs-12.col-sm-12.col-md-9
              .form-group
                %label.control-label.col-sm-5.col-md-4{:for => "name"}
                  = t("name")
                  \:
                .col-sm-7.col-md-8
                  %p.form-control-static= @reference_list.name
                %label.control-label.col-sm-5.col-md-4{:for => "description"}
                  = t("description")
                  \:
                .col-sm-7.col-md-8
                  %p.form-control-static= @reference_list.description
                %label.control-label.col-sm-5.col-md-4{:for => "value"}
                  = t("value")
                  \:
                .col-sm-7.col-md-8
                  %p.form-control-static= @reference_list.value
                %label.control-label.col-sm-5.col-md-4{:for => "reference"}
                  = t("reference")
                  \:
                .col-sm-7.col-md-8
                  %p.form-control-static= link_to @reference_list.reference.name, @reference_list.reference
.btn-toolbar
  .btn-group.btn-group-justified
    = link_to t('edit'), edit_reference_list_path(@reference_list), class: 'btn btn-info'
    = link_to t('back'), reference_lists_path, class: 'btn btn-info'
