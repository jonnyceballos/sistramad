<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-info">
        <div class="panel-heading center">Reference list</div>
        <div class="panel-body">
          <%= simple_form_for @reference_list do |f| %>
              <%= f.error_notification %>

              <%= f.input :name, label: false, :hint => "Escriba el nombre de la referencia de lista.", autofocus: true, placeholder: 'name' %>
              <%= f.input :description, label: false, placeholder: 'description' %>
              <%= f.input :value, label: false, placeholder: 'value' %>
              <%= f.association :reference, :include_blank => false %>

              <%= f.button :submit, value: 'Send', class: 'form-control' %>
          <% end %>
        </div>
      </div>
    </div>
</div>