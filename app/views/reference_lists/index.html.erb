<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to t('index.listing_reference_lists'), reference_lists_path %></li>
  <li><%= link_to t('index.new_reference_list'), new_reference_list_path %></li>
</ul>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('description') %></th>
      <th><%= t('value') %></th>
      <th><%= t('reference') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @reference_lists.each do |reference_list| %>
        <tr>
          <td><%= reference_list.name %></td>
          <td><%= reference_list.description %></td>
          <td><%= reference_list.value %></td>
          <td><%= reference_list.reference.name %></td>
          <td>
            <div class="btn-toolbar">
              <div class="btn-group btn-group-xs">
                <%= link_to t('index.show'), reference_list, class: 'btn btn-info list' %>
                <%= link_to t('index.edit'), edit_reference_list_path(reference_list), class: 'btn btn-primary list' %>
                <%= link_to t('index.destroy'), reference_list, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger list' %>
              </div>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>


<%= paginate @reference_lists %></br>
<%= page_entries_info @reference_lists %>

<br><br>

<%= link_to new_reference_list_path, class: 'btn btn-info btn-sm list' do %>
    <i class="glyphicon glyphicon-plus"></i> <%= t('index.new_reference_list') %>
<% end %>
