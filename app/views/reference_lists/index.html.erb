<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Listing Reference Lists', reference_lists_path %></li>
  <li><%= link_to 'New reference list', new_reference_list_path %></li>
</ul>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Value</th>
      <th>Reference</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @reference_lists.each do |reference_list| %>
        <tr>
          <td><%= reference_list.name %></td>
          <td><%= reference_list.description %></td>
          <td><%= reference_list.value %></td>
          <td><%= reference_list.reference.name %></td>
          <td><%= link_to 'Show', reference_list %></td>
          <td><%= link_to 'Edit', edit_reference_list_path(reference_list) %></td>
          <td><%= link_to 'Destroy', reference_list, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>


<%= paginate @reference_lists %></br>
<%= page_entries_info @reference_lists %>

<br>

<%= link_to 'New Reference list', new_reference_list_path, class: 'btn btn-default' %>
