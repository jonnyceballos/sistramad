<div class="well text-center">  
  <h3> <strong> Nombre de la solicitud: </strong> <%= @procedure.name %> </h3>      
  <h3> <strong> Código de la solicitud: </strong> <%= @procedure.code %> </h3> 
  <h3> <strong> Usuario: </strong> <%= @procedure.user.username %> </h3>  
  <h3> <strong> Correo: </strong> <%= @procedure.user.email %>  </h3> 
  <h3> <strong> Estado: </strong> <%= @procedure.state %>  </h3> 
</div>
 

<div class="well">
  <div>
    <p><strong> <h2 class="text-center">Lista de recaudos requeridos:</h2> </strong></p>
  </div>
  <p><h5 class="text-center">(debe cargar todos los recaudos, en caso contrario su solicitud no podrá ser evaluada).</h5></p>
  <br>

  <div class="container">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Nombre:</th>
          <th>Código:</th>
          <th>Archivo adjunto:</th> 
          <th>Acciones:</th>
        </tr>
        </thead>

        <tbody>
        <% @procedure.documents.each do |document|%>
            <tr>
              <td><%= document.name %></td>
              <td><%= document.code %></td>
              <% if document.attachment_url %>
                <td> <%= link_to document.name , document.attachment_url %> <i class="glyphicon glyphicon-ok"></i> </td>
              <% else %>
                <td> Sin archivo adjunto <i class="glyphicon glyphicon-warning-sign"></i> </td> 
              <% end %>
            
              <td>
                <div class="btn-toolbar">
                  <div class="btn-group btn-group-xs">
                    <% if document.attachment_url %>
                      <%= link_to "Actualizar", edit_document_path(document), class: 'btn btn-primary list' %>
                    <% else %>
                      <%= link_to "Cargar", edit_document_path(document), class: 'btn btn-primary list' %>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  <div class="text-center">
    <% if @procedure.in_draft? %>
      <%= link_to validate_procedure_path(@procedure), class: 'btn btn-success btn-lg list' do %>
        <i class="glyphicon glyphicon-cog"></i> Confirmar Solicitud
      <% end %>
    <% end %>
  </div>

  </div>
</div>

<%= link_to 'Edit', edit_procedure_path(@procedure) %> |
<%= link_to 'Back', procedures_path %>
