<p id="notice"><%= notice %></p>

<div class="well"> 
  <p> <strong> <h3> Nombre de la solicitud: </h3> </strong> </p>
  <div> Trámite Año Sabatico </div>
  <p> <strong> <h3> Código de la solicitud: </h3> </strong> </p>
  <div> T-AS100 </div>
  <p> <strong> <h3> Usuario: </h3> </strong>  <p>
  <div> <%= @procedure.user.username %> </div>
  <p> <strong> <h3> Correo: </h3> </strong> <p>
  <div> <%= @procedure.user.email %> </div>
<div>

<div>
  <p><strong> <h3 class="text-center">Lista de recaudos requeridos:</h3> </strong></p>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Nombre:</th>
        <th>Código:</th>
        <th>Archivo:</th> 
        <th>Acciones:</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @procedure.documents.each do |document|%>
          <tr>
            <td><%= document.name %></td>
            <td>Código no encontrado</td>
            <% if document.attachment_url %>
              <td><%= link_to document.name , document.attachment_url %></td>
            <% else %>
              <td>Necesita cargar archivo</td>
            <% end %>
          
            <td>
              <div class="btn-toolbar">
                <div class="btn-group btn-group-xs">
                  <% if document.attachment_url %>
                    <%= link_to "Actualizar", edit_document_path(document), class: 'btn btn-primary list' %>
                  <% else %>
                    <%= link_to "Cargar", edit_document_path(document), class: 'btn btn-primary list' %>
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Edit', edit_procedure_path(@procedure) %> |
<%= link_to 'Back', procedures_path %>
